@{
    ViewBag.Title = "Home Page";
}

<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=true&libraries=weather"></script>

@*<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>*@
<script src="~/Scripts/GeoLocate.js"></script>

<table width="100%">
    <caption>
        <div id="statusMessage">
            <h4>
                <span>
                    @ViewBag.Message
                </span>
            </h4>
        </div>
    </caption>
    <thead>
        <tr>
            <th>
                <button id="btnStart" type="button" class="btn btn-small" onclick="startLocationTracking()">
                    <span class="glyphicon glyphicon-time"></span> Start
                </button>
                <button id="btnStop" type="button" class="btn btn-small" disabled="disabled" onclick="stopLocationTracking()">
                    <span class="glyphicon glyphicon-off"></span> Stop
                </button>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th><div id="map" /></th>
            <td valign="top" align="left">
                <button id="btnSaveRoute" class="btn btn-small" type="button" disabled="disabled" onclick="saveRoute()">
                    <span class="glyphicon glyphicon-lock"></span> Save
                </button>
                <ol id="locationList"></ol>
            </td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td><div class="span4" id="status" /></td>
            <td><div class="span8" id="connectionType" /></td>
        </tr>
    </tfoot>
</table>


@Html.Partial("_PartialRoute")